{% extends 'base.html.twig' %}

{% block title %}Product Detail{% endblock %}

{% block body %}
<!-- breadcrumb part start-->
    <section class="breadcrumb_part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <h2>PRODUCT Detail</h2>
                    </div>
                     {% if app.user %}
        <div class="d-flex justify-content-center p-2">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}"><h3>Logout</h3></a>
        </div>
    {% endif %}
                </div>
            </div>
        </div>
    </section>

  <!--================Single Product Area =================-->
  <div class="product_image_area">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12">
          <div class="product_img_slide owl-carousel">
            <div class="single_product_img">
              <img src="/image/{{product.photo}}"  class="img-fluid">
            </div>

           </div>
         </div>
         </div>

         <div class="col-lg-8">
         <div class="single_product_text text-center">
        <h3>{{ product.name }} <br>
                </h3>
            <p>
                {{ product.description }}
            </p>
            <div class="card_area">
                <div class="product_count_area">
                <p>Price : {{ product.price }}</p>
                </div>
                </div>
         </div>
         </div>


       </div>
     </div>
      <div class="add_to_cart d-flex justify-content-center ">
                  <a href="/list_prod" class="btn_3">BACK TO LIST PRODUCT </a>
                  <a href="{{path('cart_add' ,{id : product.id})}}" class="btn_3">ADD To Cart</a>
              </div>
{% endblock %}





